{
  "name": "leofcoin-core",
  "version": "0.1.0-beta.1",
  "description": "leofcoin core library",
  "repository": "https://github.com/leofcoin-io/leofcoin-core",
  "author": "Glenn Vandeuren <vandeurenglenn@gmail.com>",
  "main": "index.js",
  "license": "MIT",
  "private": false,
  "bin": {
    "core": "bin/cli.js"
  },
  "scripts": {
    "build": "rollup -c",
    "start": "node bin/cli.js --network olivia",
    "start-verbose": "node bin/cli.js --network olivia --verbose",
    "test": "node test/index.js",
    "watch": "rollup -c -w",
    "dev": "npm-run-all --parallel start watch"
  },
  "esdoc": {
    "source": "./src",
    "destination": "./docs",
    "plugins": [
      {
        "name": "esdoc-ecmascript-proposal-plugin",
        "option": {
          "classProperties": true,
          "objectRestSpread": true,
          "doExpressions": true,
          "functionBind": true,
          "functionSent": true,
          "asyncGenerators": true,
          "decorators": true,
          "exportExtensions": true,
          "dynamicImport": true
        }
      }
    ]
  },
  "dependencies": {
    "big-integer": "^1.6.28",
    "bip39": "^2.5.0",
    "bitcoinjs-lib": "^3.3.2",
    "bs58": "^4.0.1",
    "cors": "^2.8.4",
    "crypto-chain-validator": "^0.1.0",
    "crypto-ecdh": "^0.2.2",
    "crypto-io-fs": "^0.1.2",
    "crypto-io-utils": "0.1.2",
    "crypto-store": "^0.1.0-alpha",
    "ecdsa": "^0.7.0",
    "express": "^4.16.3",
    "fs-ext": "^1.0.0",
    "go-ipfs-dep": "^0.4.14",
    "ip-monitor": "^0.1.2",
    "ipfsd-node": "^0.1.4",
    "ipld-dag-pb": "^0.11.4",
    "leofcoin-hash": "^0.1.0",
    "multi-signature": "^0.1.0",
    "multi-wallet": "^0.1.1",
    "normalize-newline": "^3.0.0",
    "randombytes": "^2.0.6",
    "secp256k1": "^3.4.0",
    "socket-request": "^0.1.2",
    "websocket": "^1.0.25",
    "wif": "^2.0.6"
  },
  "devDependencies": {
    "esdoc": "^1.1.0",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "eslint": "^4.17.0",
    "npm-run-all": "^4.1.2",
    "rollup": "^0.57.1",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-resolve": "^3.0.2",
    "rollup-plugin-uglify": "^3.0.0",
    "tape": "^4.8.0"
  }
}
